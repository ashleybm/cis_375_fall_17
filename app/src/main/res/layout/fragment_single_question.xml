
    <!-- TODO: add checkboxes and link to the code -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/question_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="edu.umich.cliqus.questionnaire.SingleQuestionFragment">


        <TextView
            android:id="@+id/question_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:text="Tag" />

        <LinearLayout
            android:id="@+id/question_answer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_desc"
            android:orientation="vertical">

        </LinearLayout>

</RelativeLayout>

