<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionnaire_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.umich.cliqus.questionnaire.QuestionnaireFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/question_count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        tools:text="Item x of n." />

    <ProgressBar
        android:id="@+id/questonnaire_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/question_count_text" />

    <fragment
        android:id="@+id/question"
        android:name="edu.umich.cliqus.questionnaire.SingleQuestionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question_count_text"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/question_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/question"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="36dp"
        tools:text="Next" />
</RelativeLayout>

